<div class="small-12 large-12 columns jumbotron">
  <ul class="carousel-container">
    <% if @tweets %>
      <% @tweets.each_with_index do |tweet, index| %>
        <% if index == 0 %>
          <li class="carousel-item small-4 large-4 columns" id="first">
            <img src=<%= JSON.parse(tweet)['photo_url'].first %>></img>
          </li>
        <% elsif index == 1 %>
          <li class="carousel-item small-4 large-4 columns" id="second">
            <img class="hi" src=<%= JSON.parse(tweet)['photo_url'].first %>></img>
          </li>
        <% elsif index == 2 %>
          <li class="carousel-item small-4 large-4 columns" id="third">
            <img src=<%= JSON.parse(tweet)['photo_url'].first %>></img>
          </li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
